%header.main-header
  .header-inner
    .header-inner__top
      %div
        %a{href:"",}
        = image_tag "fmarket_logo_red.svg", alt: 'logo', height: '36', width: '134', class: 'header-inner__top__logo'
      %form{action:"/", method:"post", class: "header-search"}
        %input{type:"search", placeholder:"何かお探しですか",class:"header-search_input"}
          = fa_icon 'search',class:"icon-search"
    .header-inner__lwr
      %nav.lwr-menu
        %ul.lwr-menu__list
          %li<
            %h2
              %a{href:"",class:"lwr-menu__category"}
                = fa_icon 'list-ul'
                %span カテゴリーから探す
          %li<
            %h2
              %a{href:"",class:"lwr-menu__brand"}
                = fa_icon 'tags'
                %span ブランドから探す
      .lwr-user
        %ul.lwr-user__menu
          %li<
            %a{class:"lwr-user__new btn-red"}
              新規会員登録
          %li<
            %a{class:"lwr-user__login"}
              ログイン