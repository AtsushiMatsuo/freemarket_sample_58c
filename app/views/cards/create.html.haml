= content_for(:html_title) { 'クレジットカード情報入力 - Fmarket' }
= render 'shared/header'
= render 'shared/breadcrumb'
%main.card
  .container
    %article.content
      .title
        %h2 クレジットカード情報入力
      .list-reg
        .list-reg__card
          %form{action:'', method:'post', enctype: 'text/plain', id:'card'}
            .list-reg__card--inum
              %label
                %span.sub-title カード番号
                %span.form-req 必須
                %br
                %input{type:'text', name: 'CardNumber', class:'list-reg__card--inum-no', maxlength: '19', placeholder:'半角数字のみ'}
              .list-reg__card--inum-icon
                %figure
                  = image_tag 'visa_logo.svg', alt: 'VISA', size:'49x20'
                  = image_tag 'mc_logo.svg', alt: 'Mastercard', size:'34x20'
                  = image_tag 'sc_logo.svg', alt: 'SAISON CARD', size:'30x20'
                  = image_tag 'jcb_logo.svg', alt: 'JCB', size:'30x20'
                  = image_tag 'ae_logo.svg', alt: 'AMERICAN EXPRESS', size:'21x20'
                  = image_tag 'dc_logo.png', alt: 'Diners Club', size:'32x20'
                  = image_tag 'dis_logo.png', alt: 'DISCOVER', size:'32x20'
            .list-reg__card--sed
              %label
                %span.sub-title 有効期限
                %span.form-req 必須
                %br
                %select{name:'ExpMonth', class:'list-reg__card--sed-limit'}
                  %option{value: '01'} 01
                  %option{value: '02'} 02
                  %option{value: '03'} 03
                  %option{value: '04'} 04
                  %option{value: '05'} 05
                  %option{value: '06'} 06
                  %option{value: '07'} 07
                  %option{value: '08'} 08
                  %option{value: '09'} 09
                  %option{value: '10'} 10
                  %option{value: '11'} 11
                  %option{value: '12'} 12
                %i.icon-arrow-btm
                %span.p-limit 月
                %select{name:'ExpYear', class:'list-reg__card--sed-limit'}
                  %option{value: '20'} 20
                  %option{value: '21'} 21
                  %option{value: '22'} 22
                  %option{value: '23'} 23
                  %option{value: '24'} 24
                  %option{value: '25'} 25
                  %option{value: '26'} 26
                  %option{value: '27'} 27
                  %option{value: '28'} 28
                  %option{value: '29'} 29
                  %option{value: '30'} 30
                %i.icon-arrow-btm
                %span.p-limit 年
            .list-reg__card--iscd
              %label
                %span.sub-title セキュリティコード
                %span.form-req 必須
                %br
                %input{type:'text', name:'SecurityCode', class:'list-reg__card--iscd-code',  maxlength: '4', placeholder:'カード背面4桁もしくは3桁の番号'}
              .list-reg__card--iscd-q
                #click-balloon
                  %span.form-q ?
                  カード裏面の番号とは？
                .balloon
                  %span
                    カードの裏面をご参照ください。
                  %br
                  = image_tag 'c-card_bk.png', alt: '', width: '180'
                %p.bk-balloon
            %button{type:'submit', class:'list-reg__card--btn'}
              %span= link_to '追加する','#'
    %nav= render 'shared/mypage_side'
%nav= render 'shared/sellbutton'
%aside= render 'shared/footertop'
%footer= render 'shared/footer'