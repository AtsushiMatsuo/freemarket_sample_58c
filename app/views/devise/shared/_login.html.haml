.login-main
  .login-main__top
    ="アカウントをお持ちでない方はこちら"
    = link_to "新規会員登録" , ''
  .login-main__middle
    .btn-sns.btn-sns__facebook
      =icon('fab', 'facebook',class:"icon--facebook")
      = "Facebookでログイン"
    .btn-sns.btn-sns__google
      =icon('fab', 'google',class:"icon--google")
      = "Googleでログイン"
  .login-main__under
    .form__field      
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form__field--input__email
          = f.text_field :email ,placeholder: "メールアドレス"
        .form__field--input__password
          = f.text_field :password ,placeholder:"パスワード"      
        .login-submit
          = f.submit 'ログイン' , class:'form__field--login btn-sns'
        .form__field--forget
          = link_to "パスワードお忘れの方" ''
      